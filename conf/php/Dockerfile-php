ARG PHP_VERSION_TAG
ARG MYSQL_DATABASE
ARG MYSQL_ROOT_PASSWORD

FROM php:${PHP_VERSION_TAG}

ENV MYSQL_DATABASE=${MYSQL_DATABASE} \
    MYSQL_ROOT_PASSWORD=${MYSQL_ROOT_PASSWORD}

RUN sed -i '1ideb http://mirrors.ustc.edu.cn/debian jessie main' /etc/apt/sources.list \
    && sed -i '1ideb http://mirrors.ustc.edu.cn/debian jessie-updates main' /etc/apt/sources.list \
    && sed -i 's/jessie\/updates/jessie-updates/g' /etc/apt/sources.list

RUN apt-get update && apt-get upgrade -y \
    git \
    libfreetype6-dev \
    libjpeg62-turbo-dev \
    libpq-dev \
    libmagickwand-dev \
    libmcrypt-dev \
    libpng-dev \
    libmemcached-dev \
    libssl-dev \
    libssl-doc \
    zlib1g-dev \
    libicu-dev \
    libxml2-dev \
    g++ \
    && docker-php-ext-install \
        bz2 \
        iconv \
        mbstring \
        mcrypt \
        mysqli \
        opcache \
        pgsql \
        pdo_mysql \
        pdo_pgsql \
        soap \
        zip \
    && docker-php-ext-configure gd \
        --with-freetype-dir=/usr/include/ \
        --with-jpeg-dir=/usr/include/ \
        --with-png-dir=/usr/include/ \
    && docker-php-ext-install gd \
    && docker-php-ext-install exif \
    && docker-php-ext-configure intl  \
    && docker-php-ext-install intl \
    && pecl install mongodb && docker-php-ext-enable mongodb \
    && echo 'no' | pecl install redis && docker-php-ext-enable redis \
    && echo 'yes' | pecl install imagick && docker-php-ext-enable imagick

RUN php -r "copy('https://getcomposer.org/installer', 'composer-setup.php');" \
    && php composer-setup.php \
    && php -r "unlink('composer-setup.php');" \
    && mv composer.phar /usr/bin/composer \
    && chmod a+x /usr/bin/composer

RUN cd /var/www/ \
    && composer create-project --prefer-dist yiisoft/yii2-app-basic html

RUN sed -i "s/mysql:host=localhost;dbname=yii2basic/mysql:host=mariadb;dbname=${MYSQL_DATABASE}/" /var/www/html/config/db.php \
    && sed -i "s/'password' => ''/'password' => '${MYSQL_ROOT_PASSWORD}'/" /var/www/html/config/db.php